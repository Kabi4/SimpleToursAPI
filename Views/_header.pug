header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
        form.nav__search
            button.nav__search-btn
                svg
                    use(xlink:href='/img/icons.svg#icon-search')
            input.nav__search-input(type='text' placeholder='Search tours')
    .header__logo
        img(src='/img/logo-white.png' alt='Natours Logo')
    nav.nav.nav--user
        if !user
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/signup') Sign Up
        else
            button.nav__el(id='logout') Log Out
            a.nav__el(href='/me')
                img.nav__user-img(alt=`User Photo of ${user.name}` src=`/img/users/${user.photo}`)
                span= user.name.split(" ")[0]